<h1>Register</h1>
<form action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>Name: <input type="text" name = "user[name]"></p>
	<p>Alias: <input type="text" name = "user[alias]"></p>
	<p>Email: <input type="text" name = "user[email]"></p>
	<p>Password: <input type="password" name = "user[password]"></p>
	<p>Password Confirmation: <input type="password" name = "user[password_confirmation"></p>
	<input type="submit" value="Register">
</form>
<h1>Login</h1>
<form action="/sessions" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	Email: <input type="text" name = "email">
	Password: <input type="password" name = "password">
	<input type="submit" value="Log In">
</form>